{
  "name": "server",
  "version": "0.0.0",
  "scripts": {
    "start": "ts-node ./bin/www",
    "build": "NODE_ENV=production tsc --build tsconfig.json",
    "watch": "nodemon"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "morgan": "~1.9.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.1",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.12",
    "nodemon": "^1.19.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "**/*.ts"
    ],
    "exec": "yarn start",
    "ext": "ts"
  }
}
